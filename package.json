{
    "name": "stats-twitch",
    "description": "Save twitch stats to db",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "snapshot": "node ./bin/saveTwitch",
        "serve": "cross-env PORT=5001 nodemon index.js",
        "pub": "cross-env NODE_ENV=development webpack --hide-modules --watch",
        "dev": "run-p pub serve",
        "prod": "heroku local web"
    },
    "nodemonConfig": {
        "ignore": [
            "publicSrc/*"
        ],
        "delay": "500"
    },
    "dependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "css-loader": "^0.28.7",
        "express": "^4.16.1",
        "file-loader": "^1.1.4",
        "pg": "^7.3.0",
        "request": "^2.83.0",
        "vue": "^2.4.4",
        "vue-loader": "^13.0.5",
        "vue-template-compiler": "^2.4.4",
        "webpack": "^3.6.0"
    },
    "devDependencies": {
        "cross-env": "^5.0.5",
        "nodemon": "^1.12.1",
        "npm-run-all": "^4.1.1"
    }
}
